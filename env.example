# VIB Environment Variables
# Copy this file to .env and fill in the values

# Django Configuration
SECRET_KEY=your-secret-key-here
ENVIRONMENT=local  # local or production

# Database (PostgreSQL)
POSTGRES_NAME=vib
POSTGRES_HOST=host.docker.internal  # or managed DB host in production
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

# Frontend API URL
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000  # or https://viktorbezai.online in production

# Google APIs (optional)
GOOGLE_API_KEY=
GOOGLE_CLIENT_SECRET=

# Proxy Configuration (optional)
SCRAPER_API_KEY=
PROXY_USERNAME=
PROXY_PASS=
PROXY_HOST=
